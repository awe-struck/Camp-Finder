<% layout('layouts/boilerplate')%>

<div class="row mb-5">
  <div class="card col-md-6 offset-md-3 px-0">

    <img src="https://images.unsplash.com/photo-1471115853179-bb1d604434e0?q=80&w=1064&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" class="card-img-top" alt="camp">

    <div class="card-body">
      <form class="validated-form" action="/login" method="post" novalidate>
        <h6 class="card-title text-left">Login</h6>
        <div class="mb-3">
          <label for="username" class="form-label">Username</label>
          <input type="text" id="username" class="form-control" name="username" placeholder="username" required>
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>

        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input type="password" id="password" class="form-control" name="password" placeholder="password" required>
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>
        <button class="btn btn-success">Login</button>
      </form>
    </div>
  </div>
</div>