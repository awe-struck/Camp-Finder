<% layout('layouts/boilerplate')%>

<div class="row">
  <div class="col-6 offset-3">
    <h1 class="text-center">New Campground</h1>
    <form class="validated-form" action="/campgrounds" method="post" enctype="multipart/form-data" novalidate>
      <div class="mb-3">
        <label for="title" class="form-label"> Title</label>
        <input type="text" id="title" class="form-control" name="campground[title]" placeholder="Camp Title" required>
        <div class="valid-feedback">
          Looks good!
        </div>

      </div>
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input type="text" id="location" class="form-control" name="campground[location]" placeholder="Camp Location" required>
      </div>




      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea id="description" class="form-control" name="campground[description]" placeholder="Comments" required></textarea>
      </div>




      <div class="mb-3">
        <label for="price" class="form-label">Campground Price</label>
        <div class="input-group">
          <span class="input-group-text">$</span>
          <input type="number" id='price' class="form-control" name="campground[price]" placeholder='0.00' step="0.01" required>
        </div>
      </div>

      <div class="mb-3 custom-file">
        <label for="image" class="form-label">Photos</label>
        <input type="file" id="formFileMultiple" class="form-control" name="image" multiple required>
        <label for="image" class="custom-file-label text-muted"></label>
      </div>

      <div class="mb-3">
        <button class="btn btn-primary mb-3">Add Campground</button>
      </div>
    </form>
    <a href="/campgrounds">Back to Listings</a>
  </div>
</div>